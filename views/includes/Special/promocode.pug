mixin promocode(data)
    <!-- PROMOCODE -->
    table(width="100%" border="0" cellspacing="0" cellpadding="0" class="table-wrapper" bgcolor="#FFFFFF")
        tr
            td(align="center" valign="top" class="td-padding-outer" style="padding:25px 0 25px 0;")
                table(width="600" border="0" cellspacing="0" cellpadding="0" class="table-full" bgcolor="#FDD01A")
                    tr
                        td(align="center" valign="top" style="padding:25px 60px 25px 60px;")
                            table(width="100%" border="0" cellspacing="0" cellpadding="0" bgcolor="#FDD01A")
                                tr
                                    td(align="center" valign="top" style="padding-bottom: 15px;")
                                        a(href=`${data.link}` name=`img_${data.img}` target="_blank" xt="SPCLICKSTREAM" style="font-family: Trebuchet MS,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Tahoma,sans-serif; font-size:24px; line-height:28px; color:#000000; text-decoration: none;")!=data.title
                                tr
                                    td(align="center" valign="top")
                                        table(bgcolor="#CAA614" style="border-radius: 22px;")
                                            tr
                                                td(align="center" valign="top" style="font-family: Trebuchet MS,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Tahoma,sans-serif; font-size:20px; line-height:23px; font-weight:bold; color:#FFFFFF; padding:10px 30px 10px 30px; text-decoration: none;")!=data.promocode
                                tr
                                    td(align="center" valign="top" style="padding: 15px 0 0 5px;")
                                        table(border="0" cellspacing="0" cellpadding="0")
                                            tr
                                                td(align="left" valign="top" width="16" style="padding-right:10px;")
                                                    img(src="https://www.collishop.be/ecomwcs/static/StaticWeb/CS/mailbanners/images/arrow.png" alt="pijl" width="16" height="16" border="0" style="display:block;")
                                                td(align="center" valign="top" style="font-family: Trebuchet MS,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Tahoma,sans-serif; font-size:14px; line-height:17px; color:#000000; display: inline")
                                                    a(href=`${data.link}` name=`img_${data.img}` target="_blank" xt="SPCLICKSTREAM" style="color:#000000; text-decoration:none;")!=data.cta
    <!-- PROMOCODE -->